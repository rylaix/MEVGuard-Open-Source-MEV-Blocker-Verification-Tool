{
    "name": "MEVGuard Development Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-vscode.cpptools",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.pythonPath": "/usr/local/bin/python"
            }
        }
    },
    "forwardPorts": [8545],
    "postCreateCommand": "pip install -r requirements.txt",
    "remoteUser": "vscode",
    "mounts": [
        "source=${localWorkspaceFolder}/logs,target=/workspace/logs,type=bind",
        "source=${localWorkspaceFolder}/config,target=/workspace/config,type=bind",
        "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind"
    ],
    "remoteEnv": {
        "DUNE_API_KEY": "${localEnv:DUNE_API_KEY}",
        "RPC_NODE_URL": "${localEnv:RPC_NODE_URL}"
    }
}
